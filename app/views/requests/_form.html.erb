<div class="row">
  <div class="medium-6 medium-offset-2 large-6 large-offset-2 columns">
    <%= form_for(@request) do |f| %>
      <% if @request.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being processed:</h2>

          <ul>
          <% @request.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :tool_id %><br>
        <%= f.text_field :tool_id %>
      </div>
      <div class="field">
        <%= f.label :start_date %><br>
        <%= f.date_field :start_date %>
      </div>
      <div class="field">
        <%= f.label :end_date %><br>
        <%= f.date_field :end_date %>
      </div>
      <div class="field">
        <%= f.label :notes %><br>
        <%= f.text_field :notes %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
