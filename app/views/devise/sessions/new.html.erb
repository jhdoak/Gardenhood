<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row">
  <div class="medium-6 columns">
    <h2 class="gh-devise-page-title">Log in</h2>
  </div>
</div>

<div class="row">
  <div class="medium-6 columns">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>
</div>

<div class="row">
  <div class="medium-6 columns">
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="medium-6 columns">
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  </div>
</div>

<div class="row">
  <div class="medium-6 columns">
    <div class="actions">
      <%= f.submit "Log in", class: "success button" %>
    </div>
  </div>
</div>

<% end %>

<div class="row">
  <div class="medium-6 columns">
    <%= render "devise/shared/links" %>
  </div>
</div>
