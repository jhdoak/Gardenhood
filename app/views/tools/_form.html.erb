<div>
  <div class="form">
    <%= form_for(@tool, html: { class: "directUpload", data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>
      <% if @tool.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@tool.errors.count, "error") %> prohibited this tool from being saved:</h2>

          <ul>
          <% @tool.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <h4><%= title %></h4>

      <div class="field">
        <%= f.text_field :name, placeholder: "Tool Name" %>
      </div>

      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <div class="field">
        <%= f.text_field :details, placeholder: "Details" %>
      </div>

      <div class="actions">
        <%= f.button "Create Tool", class: "success button" %>
      </div>
    <% end %>
    <%= link_to 'Back', tools_path, class: "success button" %>
  </div>
</div>
