<p id="notice"><%= notice %></p>

<h1>Your Toolshed</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>Requested</th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.name %></td>
        <td><%= tool.details %></td>
        <td><%= tool.requested %></td>
        <td><%= link_to 'Show', tool %></td>
        <%- if tool.gardener == current_gardener %>
          <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
          <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tool', new_tool_path %>
